# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DATABASE_URL=postgresql://cicloazul:cicloazul123@localhost:5432/cicloazul
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cicloazul
DB_USER=cicloazul
DB_PASSWORD=cicloazul123
DB_POOL_MAX=20
DB_POOL_MIN=5

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Upload Configuration
UPLOAD_DIR=./uploads
UPLOAD_TEMP_DIR=./uploads/temp
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# Storage Configuration
STORAGE_PROVIDER=local
API_URL=http://localhost:3000

# Image Processing
ENABLE_THUMBNAILS=true
THUMBNAIL_SIZES=200,400,800
ENABLE_WATERMARK=true
WATERMARK_TEXT=CICLO AZUL
MIN_IMAGE_WIDTH=640
MIN_IMAGE_HEIGHT=480

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:19006,exp://192.168.1.100:19000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_TIMEOUT_MINUTES=30

# LGPD
DATA_RETENTION_DAYS=2555
ENABLE_AUDIT_LOG=true

{
  "name": "ciclo-azul",
  "version": "1.0.0",
  "description": "Solid Waste Management System - Mobile App and API",
  "private": true,
  "workspaces": [
    "backend",
    "mobile",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=mobile && npm install --workspace=shared",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:mobile": "npm start --workspace=mobile",
    "build:backend": "npm run build --workspace=backend",
    "build:mobile": "npm run build --workspace=mobile",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:seed": "npm run seed --workspace=backend",
    "db:reset": "npm run reset --workspace=backend"
  },
  "keywords": [
    "waste-management",
    "expo",
    "react-native",
    "nodejs",
    "postgresql",
    "lgpd"
  ],
  "author": "CICLO AZUL Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-preset-expo": "^54.0.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/datetimepicker": "^8.5.0",
    "@react-native-community/netinfo": "^11.4.1",
    "react-native-gesture-handler": "^2.29.0",
    "react-native-reanimated": "^4.1.3"
  }
}
